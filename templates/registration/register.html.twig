{% extends 'base.html.twig' %}

{% block title %}Rigistreer je hier!{% endblock %}

{% block jumbo %}
    <div class="jumbotron text-center">
        <h1>Korfbal platform</h1>
        <p>-> Registreer je <-</p>
    </div>
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    <h1 class="h3 mb-3 font-weight-normal">Registreer je hier in</h1>
    <p>Hebt u al een <a href="/login">log in?</a></p>
    {{ form_row(registrationForm.firstname, {
        label: 'Voornaam'
    }) }}
    {{ form_row(registrationForm.lastname, {
        label: 'Achternaam'
    }) }}
    {{ form_row(registrationForm.email, {
        label: 'E-mail'
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Wachtwoord'
    }) }}
    {{ form_row(registrationForm.agreeTerms, {
        label: 'Ga akkoord met de voorwaarden'
    }) }}
    <button type="submit" class="btn btn-lg btn-outline-secondary">Registreer -></button>
    {{ form_end(registrationForm) }}
{% endblock %}